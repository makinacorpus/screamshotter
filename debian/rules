#!/usr/bin/make -f

export DH_VIRTUALENV_INSTALL_ROOT=/opt

%:
	dh $@ --with python-virtualenv

override_dh_virtualenv:
	dh_virtualenv --python /usr/bin/python3 --builtin-venv --install-suffix screamshotter --preinstall "setuptools==53.0.0" --preinstall "wheel==0.36.2"
	debian/screamshotter2/opt/screamshotter/bin/python debian/screamshotter2/opt/screamshotter/bin/pip install nodeenv==1.5.0
	debian/screamshotter2/opt/screamshotter/bin/nodeenv -C '' -p -n 14.15.5
	cp package.json package-lock.json debian/screamshotter2/opt/screamshotter/
	. debian/screamshotter2/opt/screamshotter/bin/activate && npm ci -g --unsafe-perm=true

.PHONY: override_dh_strip override_dh_shlibdeps

override_dh_strip:
	dh_strip --exclude=/Pillow.libs/

override_dh_shlibdeps:
	dh_shlibdeps -X/Pillow.libs/
